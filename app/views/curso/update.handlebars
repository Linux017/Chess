<div class="container">    
<div class="row mt-8">
    <h1 class="col-11">Editar Curso</h1>
    <button type="button" class="btn btn-primary mt-2 col-1 " onclick="location.href = '/curso'" >Voltar</button>
</div>

    <div class="bs-docs-section row col-8">
        <form action="/curso/update/{{curso.id}}" method="post" id="form">
            <fieldset>
                </div>
                <div class="form-group">
                <label for="sigla">Sigla</label>
                <input type="text" maxlength="255" class="form-control" value="{{curso.sigla}}" name="sigla" placeholder="Informe a Sigla do Curso">
                </div>

                <div class="form-group">
                <label for="nome">Nome : </label>
                <input type="text" maxlength="255" class="form-control" value="{{curso.nome}}" name="nome" placeholder="Informe o nome do Curso">
                </div>

                <div class="form-group">
                <label for="descricao">Descrição :</label>
                <textarea class="form-control" id="descricao" name="descricao" rows="3">{{curso.descricao}}</textarea>
                </div>

                <div class="form-group">
                <label for="curso">Área :</label>
                <select class="form-control" id="areas" id=""  name="area">
                    <option value="{{curso.area.id}}">{{curso.area.nome}}</option>
                </select>
                </div><a hidden id="index"></a>
                <button class="btn btn-primary mt-3" id="send" >Enviar</button>
            </fieldset>
            <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
        
    </div>
</div>
<script defer src="/js/curso_update.js"></script>